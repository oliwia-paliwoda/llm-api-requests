{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "nodenext",
    "target": "es2022",

    "types": ["node"],

    "strict": true,

    "sourceMap": true,

    "verbatimModuleSyntax": true,
    "isolatedModules": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "skipLibCheck": true
  }
}
